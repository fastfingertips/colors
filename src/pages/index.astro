---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Colors - Creative Color Workshop">
	<main class="clean-landing">
		<div class="content-wrapper">
			<section class="hero">
				<h1 class="title">Colors</h1>
				<p class="subtitle">A minimalist workshop for digital color systems and exploration.</p>
				
				<div class="cta-actions">
					<a href="/list" class="btn-primary">
						<span>Explore Library</span>
						<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
					</a>
					<a href="/color/0071E3" class="btn-link">Open Editor</a>
				</div>
			</section>

			<div class="simple-info">
				<div class="info-item">
					<span class="label">Library</span>
					<span class="value">Curated collection</span>
				</div>
				<div class="info-item">
					<span class="label">Analysis</span>
					<span class="value">CMYK & OKLCH</span>
				</div>
				<div class="info-item">
					<span class="label">Export</span>
					<span class="value">CSS & Tailwind</span>
				</div>
			</div>
		</div>

		<Footer />
	</main>
</Layout>

<style>
	.clean-landing {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		background: var(--bg-color);
	}

	.content-wrapper {
		flex: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 40px 20px;
		max-width: 800px;
		margin: 0 auto;
		width: 100%;
	}

	.hero {
		text-align: center;
		margin-bottom: 60px;
	}

	.title {
		font-size: 5rem;
		font-weight: 800;
		letter-spacing: -0.05em;
		margin-bottom: 16px;
		background: var(--heading-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.subtitle {
		font-size: 1.25rem;
		opacity: 0.5;
		font-weight: 500;
		margin-bottom: 40px;
		max-width: 500px;
		margin-left: auto;
		margin-right: auto;
	}

	.cta-actions {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 24px;
	}

	.btn-primary {
		display: inline-flex;
		align-items: center;
		gap: 10px;
		padding: 14px 28px;
		background: var(--text-color);
		color: var(--bg-color);
		border-radius: var(--radius-sm);
		font-weight: 700;
		text-decoration: none;
		transition: transform 0.2s;
	}

	.btn-primary:active {
		transform: scale(0.98);
	}

	.btn-link {
		color: var(--text-color);
		text-decoration: none;
		font-weight: 600;
		opacity: 0.6;
		transition: opacity 0.2s;
	}

	.btn-link:hover {
		opacity: 1;
	}

	.simple-info {
		display: flex;
		gap: 48px;
		padding-top: 60px;
		border-top: 1px solid var(--border-color);
		width: 100%;
		justify-content: center;
	}

	.info-item {
		display: flex;
		flex-direction: column;
		gap: 4px;
	}

	.info-item .label {
		font-size: 0.7rem;
		font-weight: 800;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		opacity: 0.3;
	}

	.info-item .value {
		font-size: 0.9rem;
		font-weight: 600;
		opacity: 0.7;
	}

	@media (max-width: 640px) {
		.title { font-size: 3.5rem; }
		.simple-info { 
			flex-direction: column; 
			gap: 24px; 
			align-items: center;
			text-align: center;
		}
	}
</style>
